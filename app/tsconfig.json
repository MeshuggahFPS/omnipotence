{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "~/*": ["./public/*"],
      "react": ["./node_modules/@types/react"],
      "@Components/*": ["./components/*"],
      "@Button/*": ["./components/Common/Button/*"],
      "@Layouts/*": ["./components/Common/Layout/*"],
      "@Config/*": ["./config/*"],
      "@Environment/*": ["./environments/*"],
      "@Utils/*": ["./utils/*"],
      "@Hooks/*": ["./hooks/*"],
      "@Types/*": ["./types/*"],
      "@Providers/*": ["./providers/*"]
    },
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "exclude": ["node_modules"],
  "include": [
    "next-env.d.ts",
    "**/*.js",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ]
}
